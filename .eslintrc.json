{
  "extends": "eslint:recommended",
  "rules": {
      "indent": ["error", 4],
      "semi": ["error", "always"],
      "no-console": "error",
      "no-unreachable": "error",
      "padding-line-between-statements": [
          "error",
          { "blankLine": "always", "prev": ["const", "let", "var"], "next": "*"},
          { "blankLine": "any",    "prev": ["const", "let", "var"], "next": ["const", "let", "var"]}
      ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  }
}
